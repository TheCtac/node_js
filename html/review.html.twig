{% extends 'AcmeTanksBundle::base.html.twig' %}
{%block title%}{{vid}}{% endblock %}	
{%block theme%}

    <h2>{{vid}}</h2>
	{%if app.request.cookies.has('login') %}
		<div id=new_ onclick="add_open('add_tank_')">{%trans%}Додати танк{%endtrans%}</div>
	{%else%}
		<div id=new_ onclick='window.scrollTo(0,0);enter()'>{%trans%}Зареєструйтесь щоб додати танк{%endtrans%}</div>	
	{%endif%}	

	{% include 'AcmeTanksBundle::add_tank.html.twig' %}

	{%if count != 0%}
	    {% include 'AcmeTanksBundle::tank.html.twig' %}
	{%else%}
	    {% include 'AcmeTanksBundle::nofound.html.twig' %}
	{%endif%}	
	{% set pages = (count/4)|round(0,'ceil')%}
	{% set block_ = '#theme_' %}

    <br>{%trans%}знайдено{%endtrans%} {{count}}
	{% include 'AcmeTanksBundle::pager.html.twig' %}

{%endblock %}	

	
